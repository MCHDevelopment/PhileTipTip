<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/phileGreen"
    android:id="@+id/datenschutz_main"
    android:orientation="vertical"
    tools:context=".DatenschutzActivity">

    <!-- Home Button -->
    <ImageButton
        android:id="@+id/button_home"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_gravity="start"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/button_background"
        android:padding="10dp"
        android:scaleType="centerInside"
        android:src="@drawable/home"
        android:contentDescription="Home" />

    <!-- Datenschutz Header -->
    <TextView
        android:id="@+id/datenschutz_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:text="DatenschutzerklÃ¤rung"
        android:background="@drawable/rounded_background"
        android:textColor="@android:color/black"
        android:textSize="24sp"
        android:textStyle="bold" />

    <!-- ScrollView for long content -->
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_margin="16dp"
        android:background="@drawable/rounded_background">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Example Section 1 -->
            <TextView
                android:id="@+id/datenschutz_section_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/allgemeines"
                android:textColor="@android:color/black"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginBottom="10dp"/>

            <TextView
                android:id="@+id/datenschutz_text_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Vivamus luctus urna sed urna ultricies ac tempor dui sagittis. In condimentum facilisis porta."
                android:textColor="@android:color/black"
                android:textSize="16sp"
                android:layout_marginBottom="20dp"/>

            <!-- Example Section 2 -->
            <TextView
                android:id="@+id/datenschutz_section_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/datenerhebung"
                android:textColor="@android:color/black"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginBottom="10dp"/>

            <TextView
                android:id="@+id/datenschutz_text_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nullam accumsan lorem in dui. Cras ultricies mi eu turpis hendrerit fringilla. Vestibulum ante ipsum primis in faucibus orci luctus et ultrices posuere cubilia Curae; In ac dui quis mi consectetuer lacinia. Nullam accumsan lorem in dui. Cras ultricies mi eu turpis hendrerit fringilla. Vestibulum ante ipsum primis in faucibus orci luctus et ultrices posuere cubilia Curae; In ac dui quis mi consectetuer lacinia.Nullam accumsan lorem in dui. Cras ultricies mi eu turpis hendrerit fringilla. Vestibulum ante ipsum primis in faucibus orci luctus et ultrices posuere cubilia Curae; In ac dui quis mi consectetuer lacinia. "
                android:textColor="@android:color/black"
                android:textSize="16sp"
                android:layout_marginBottom="20dp"/>

            <!-- Example Section 3 -->
            <TextView
                android:id="@+id/datenschutz_section_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/datenverarbeitung"
                android:textColor="@android:color/black"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginBottom="10dp"/>

            <TextView
                android:id="@+id/datenschutz_text_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Praesent congue erat at massa. Sed cursus turpis vitae tortor. Ut varius tincidunt libero. Nullam accumsan lorem in dui. Cras ultricies mi eu turpis hendrerit fringilla. Vestibulum ante ipsum primis in faucibus orci luctus et ultrices posuere cubilia Curae; In ac dui quis mi consectetuer lacinia."
                android:textColor="@android:color/black"
                android:textSize="16sp"
                android:layout_marginBottom="20dp"/>

        </LinearLayout>
    </ScrollView>

</LinearLayout>
